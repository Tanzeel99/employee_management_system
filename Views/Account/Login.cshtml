
@model AssignMVC.Models.membership

<style>
    h1{
        font-family:'Times New Roman', Times, serif
    }
</style>
<h1 class="k-text-align-center"><b>Login</b></h1>
<hr/>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">


        <div class="form-group">
            @Html.LabelFor(model => model.UserName, htmlAttributes: new { @class = "control-label col-md-3 col-md-offset-3" })
            <div class="col-md-6 col-md-offset-5">
                @Html.EditorFor(model => model.UserName, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.UserName, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Password, htmlAttributes: new { @class = "control-label col-md-3 col-md-offset-3" })
            <div class="col-md-6 col-md-offset-5">
                @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-5 col-md-6">
                <input type="submit" value="Login" class="btn btn-success" />
            </div>
@*            <div class="col-md-offset-0 col-md-1">
                @Html.ActionLink("Sign Up", "SignUp", "", htmlAttributes: new { @class = "btn btn-primary" })
            </div>*@
            <div class="col-md-offset-5 col-md-6">
                <br />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            </div>

        </div>
    </div>
}
<script type="text/javascript">
    $(document).ready(function () {
        document.getElementById("UserName").focus();
    })
</script>


