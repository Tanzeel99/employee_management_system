@model AssignMVC.Employee


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="container">
        @Html.HiddenFor(Model=>Model.EmployeeID)
        @Html.HiddenFor(Model=>Model.CreatedBy)
        @Html.HiddenFor(Model=>Model.CreatedDate)
        @Html.HiddenFor(Model=>Model.UpdatedBy)
        @Html.HiddenFor(Model=>Model.UpdatedDate)
        @Html.HiddenFor(Model=>Model.Status)

        <h4>Employee</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="row">

            <div class="col-lg-4">
                @Html.LabelFor(model => model.FirstName, htmlAttributes: new { @class = "control-label col-lg-0" })
                @Html.EditorFor(model => model.FirstName, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.FirstName, "", new { @class = "text-danger" })
            </div>

            <div class="col-lg-4">
                @Html.LabelFor(model => model.LastName, htmlAttributes: new { @class = "control-label col-lg-0" })
                @Html.EditorFor(model => model.LastName, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.LastName, "", new { @class = "text-danger" })
            </div>

            <div class="col-lg-4">
                @Html.LabelFor(model => model.EmailID, htmlAttributes: new { @class = "control-label col-lg-0" })
                @Html.EditorFor(model => model.EmailID, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.EmailID, "", new { @class = "text-danger" })
            </div>
        </div>
        <br />
        <div class="row">


            <div class="col-lg-4">
                @Html.LabelFor(model => model.ContactNo, htmlAttributes: new { @class = "control-label col-md-0" })
                @Html.EditorFor(model => model.ContactNo, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.ContactNo, "", new { @class = "text-danger" })
            </div>


            <div class="col-lg-4">
                @Html.LabelFor(model => model.Department.DepartmentName, htmlAttributes: new { @class = "control-label col-lg-0" })
                @Html.DropDownList("DepartmentID", (IEnumerable<SelectListItem>)ViewBag.DepartName, "Select Department", htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Department.DepartmentName, "", new { @class = "text-danger" })
            </div>
        </div>
        <br/>

        <div class="row">
            <div class="col-lg-offset-0 col-lg-1">
                <input type="submit" value="Save" class="btn btn-success" />
            </div>
            <div>
                @Html.ActionLink("Cancel", "List", "", htmlAttributes: new { @class = "btn btn-primary" })
            </div>
        </div>
    </div>
}
<br />

